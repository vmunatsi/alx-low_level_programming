#include "main.h"
#include <stdio.h>
/**
 *print_diagonal - function that draws a diagonal line on the terminal.
 * followed by a new line.
 *@n:int
 *Return: void
 */

void print_diagonal(int n)
{
	int i = 0;

	for (; i < n; i++)
	{
		_putchar(' ');
		if(i == n-1)
		{
			_putchar('\\');
			_putchar('\n');
		}
	}
	if (i <= 0)
	_putchar('\n');
}
